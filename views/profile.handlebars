<div class="container">
  <div class="row">
    <!-- User Profile Card -->
    <div class="col-12 col-md-6 mb-3">
      <div class="card">
        <h2>Profile</h2>
        <hr>
        {{!-- <h4>Name: <span>{{user.name}}</span></h4> --}}
        <h4>Username: <span>{{user.username}}</span></h4>
        <h4>Email: <span>{{user.email}}</span></h4>
        <h4>Password: <span>{{user.password}}</span></h4> <!-- Not a good practice! -->
        {{!-- <h4>About: <span>{{user.about}}</span></h4> --}}
      </div>
    </div>

    <!-- User Watchlist Card -->
    <div class="col-12 col-md-6">
      <div class="card">
        <h2>Watchlist</h2>
        <hr>
        {{#each watchlist}}
          <h4>{{this}}</h4>
        {{/each}}
      </div>
    </div>
  </div>

  <!-- User Movie Reviews -->
  <div class="row">
    <div class="card col-12">
      <h2>Movie Reviews</h2>
      {{#each movies}}
        <div class="card mb-3">
          <h4>{{title}}</h4>
          <p>{{review}}</p>
        </div>
      {{/each}}
    </div>
  </div>
</div>